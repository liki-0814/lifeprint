# Database (brew PostgreSQL uses current user without password)
DATABASE_URL=postgresql+asyncpg://liki@localhost:5432/life_print

# Redis
REDIS_URL=redis://localhost:6379/0

# MinIO
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=life-print
MINIO_SECURE=false

# JWT
JWT_SECRET_KEY=lifeprint-dev-secret-key-2024
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# LLM 大模型配置（支持 OpenAI 和 Anthropic 两种格式）
LLM_PROVIDER=openai
LLM_API_KEY=your_llm_api_key
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4o
LLM_VISION_MODEL=gpt-4o

# 向后兼容旧配置（可选）
DASHSCOPE_API_KEY=
OPENAI_API_KEY=

# 数据目录
DATA_DIR=./data

# Whisper
WHISPER_MODEL_SIZE=small

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
